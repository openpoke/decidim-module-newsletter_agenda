<style>
  table.main.container {
    width: 580px !important;
    margin: 0 auto !important;
    padding: 0 !important;
    background: <%= background_color %> !important;
  }

  table.container,
  table.container td,
  table.container p,
  table.container .intro-link,
  table.introduction td a,
  .footer-bottom a,
  .footer-box-link a {
    color: <%= font_color_over_bg %> !important;
    font-family: Inter, sans-serif !important;
    font-weight: 300;
  }

  .footnote center {
    color: #000000 !important;
  }

  table.container a {
    text-decoration: underline;
    font-family: Inter, sans-serif !important;
  }

  table.container th {
    padding-left: 0;
    padding-right: 0;
  }

  .introduction {
    padding: 0 0;
  }
  .middle,
  .footer {
    padding: 0 32px;
  }

  table.introduction,
  table.introduction td,
  table.introduction td p {
    padding: 20px 0;
  }

  .introduction-text p {
    text-align: center;
    font-size: 20px !important;
  }

  td.agenda .top {
    color: #000000 !important;
    height: 290px;
    width: 580px;
    border-top-left-radius: 290px;
    border-top-right-radius: 290px;
    background: <%= background_color %>;
  }

  td.agenda .bottom {
    color: #000000 !important;
    width: 580px;
    height: 290px;
    border-bottom-left-radius: 290px;
    border-bottom-right-radius: 290px;
    overflow: hidden;
    text-align: center;
    background: <%= background_color %>;
  }

  table.agenda td,
  table.agenda p {
    background: #ffffff !important;
    color: #000000 !important;
  }

  td.footer {
  }

  .body-subtitle {
    color: <%= background_color %>;
    font-size: 36px;
  }

  .body-box-title {
    font-size: 24px;
    font-weight: bold;
    margin: 10px 0;
    color: <%= background_color %>;
  }

  .box-image {
    margin-bottom: 20px;
  }

  .box-image img {
    width: 100% !important;
  }

  .box-link,
  .box-link a{
    color: <%= background_color %> !important;
    margin-top: 20px;
  }

  td.bottom img {
    margin-top: 1rem;
  }

  .footer-title {
    margin: 5% auto;
    min-width: 70%;
    text-align: center;
  }

  .footer-title,
    .footer-box-title,
    .footer-box-date-time,
    .footer-box-link {
      color: #ffffff !important;
    }

  .footer-box-title {
    font-size: 18px;
    font-weight: bold;
    margin: 10px 0;
  }

  .footer-social {
    margin: 20px 0;
  }

  .footer-address {
    width: 50%;
  }

  .footer-address {
    font-size: 14px;
  }

  .footer-bottom {
    width: 100%;
    /*margin: 0 0 20px 0;*/
  }

  .footer-bottom a {
    color: #ffffff !important;
  }
  .footer-bottom__logo {
    height: 40px;
    padding-left: 35px;
  }

  .footer-social__wrap {
    text-align: right;
  }

  .footer-social {
    vertical-align: middle;
  }

  .footer-social__icon {
    display: inline-block;
    margin-right: 0.5rem;
    width: 20px !important;
    height: 20px !important;
  }

  .footer-social__icon:last-child {
    margin-right: 0;
  }

  .footnote center {
    width: 90%;
    margin: 0 auto;
  }

  img {
    -ms-interpolation-mode: nearest-neighbor;
    -ms-interpolation-mode: bicubic;
  }

  @media only screen and (max-width: 500px) {
    .event-box,
    .footer-box {
      width: 100% !important;
      display: block !important;
    }

    .box-image {
      width: 100% !important;
    }

    .footer-bottom {
      display: block;
      text-align: center;
    }

    .footer-social__wrap {
      text-align: left;
    }

    .footer-address {
      display: block;
      width: 100% !important;
      padding-bottom: 20px !important;
    }

    .footer-social__wrap {
      display: block;
    }

    .footer-social {
      display: block;
    }
  }
</style>
<table class="main container">
  <tr>
    <td class="introduction">
      <table class="introduction">
        <tr>
          <td style="text-align:center;padding-bottom: 50px;" colspan="2">
            <%= image_tag asset_pack_url("media/images/logo-newsletter.png", **host_options) %>
          </td>
        </tr>
        <tr>
          <td style="font-size:30px;line-height:30px;font-weight: bold;text-align:center;padding:0 32px;" colspan="2">
            <%= translated_text_for :intro_title %>
          </td>
        </tr>
        <% if has_image?(:main_image) %>
          <tr>
            <td>
              <table class="row content image">
                <tr align="center">
                  <th class="small-12 first columns" align="center">
                    <%= image_tag image_url(:main_image, resize_to_fit: [653, 436]), width: "653" %>
                  </th>
                  <th class="expander"></th>
                </tr>
              </table>
            </td>
          </tr>
        <% end %>
        <tr>
          <td class="introduction-text" style="padding:0 32px;">
            <%= translated_text_for :intro_text %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="agenda">
      <table class="agenda" width="100%">
        <tr>
          <td class="top" height="290" width="580" style="vertical-align: middle; padding: 0 120px; text-align: center; font-size:24px;"
              colspan="2">
            <%= translated_text_for :body_title %>
            <div class="body-subtitle" style="text-align: center; margin-top: 20px">
              <%= translated_text_for :body_subtitle %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="middle" width="100%">
            <table cellpadding="0" cellspacing="0" border="0" align="center" width="100%">
              <% (1..4).each_slice(2) do |boxes| %>
                <tr>
                  <% boxes.each do |num| %>
                    <td class="event-box" style="padding: 10px;margin-bottom: 30px;" width="50%">
                      <div class="box-image">
                        <% if has_image?("body_box_image_#{num}") %>
                          <%= link_to link_for("body_box_link_url_#{num}") do %>
                            <%= image_tag(image_url("body_box_image_#{num}"), width: "238", style: "width:100%; max-width:500px; display:block; margin:0 auto;") %>
                          <% end %>
                        <% end %>
                      </div>
                      <div class="box_date_time">
                        <%= translated_text_for "body_box_date_time_#{num}" %>
                      </div>
                      <div class="body-box-title">
                        <%= translated_text_for "body_box_title_#{num}" %>
                      </div>
                      <div class="box-text">
                        <%= translated_text_for "body_box_description_#{num}" %>
                      </div>
                      <% link = link_for("body_box_link_url_#{num}") %>
                      <% if link.present? %>
                        <div class="box-link">
                          <%= link_to translated_text_for("body_box_link_text_#{num}"), link, target: :blank if link %>
                        </div>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </table>
          </td>
        </tr>
        <tr style="text-align: center;vertical-align: middle;">
          <td class="bottom" width="580px" height="290px" style="text-align: center;vertical-align: middle;">
            <%= translated_text_for :body_final_text %>
            <%= image_tag asset_pack_url("media/images/down-lilac.png", **host_options) %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="footer">
      <table>
        <tr>
          <h3 class="footer-title" style="padding: 0 10%"><%= translated_text_for :footer_title %></h3>
        </tr>
      </table>
      <table cellpadding="0" cellspacing="0" border="0" align="center">
        <tr>
          <% (1..3).each do |num| %>
            <td class="footer-box" style="padding: 10px;margin-bottom: 30px;" width="33%">
              <div class="box-image">
                <%= image_tag(image_url("footer_box_image_#{num}", resize_to_fill: [152, 101]), width: "152", height: "101") if has_image?("footer_box_image_#{num}") %>
              </div>
              <div class="footer-box-date-time">
                <%= translated_text_for "footer_box_date_time_#{num}" %>
              </div>
              <div class="footer-box-title">
                <%= translated_text_for "footer_box_title_#{num}" %>
              </div>
              <div class="footer-box-link">
                <% link = link_for("footer_box_link_url_#{num}") %>
                <%= link_to(translated_text_for("footer_box_link_text_#{num}"), link, target: :blank) if link.strip.present? %>
              </div>
            </td>
          <% end %>
        </tr>
      </table>
      <table class="footer-bottom">
        <tr>
          <td class="footer-address" style="padding-top: 24px">
            <%= translated_text_for :footer_address_text %>
          </td>
          <td class="footer-social__wrap" style="padding-top: 24px">
            <%= translated_text_for :footer_social_links_title %>
            <div class="footer-social">
              <%= social_links.join.html_safe %>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <% if has_footer_image? %>
        <table class="footer-logo" style="margin: 0;">
          <tr>
            <td class="footer-bottom" style="padding: 20px 0;">
              <%= image_tag footer_image_url, class: "footer-bottom__logo", width: "150", height: "50" %>
            </td>
          </tr>
        </table>
      <% end %>
    </td>
  </tr>
</table>
